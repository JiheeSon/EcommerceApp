<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="@dimen/_10dp"
    android:background="@drawable/background_category"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/img_category"
            android:src="@drawable/img"
            android:layout_marginVertical="@dimen/_15dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/text_category_name"
            android:layout_width="@dimen/_120dp"
            android:layout_height="@dimen/_120dp"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/text_category_name"
            tools:text="Smart Phones"
            android:textSize="@dimen/_20sp"
            android:textColor="@color/light_orange"
            app:layout_constraintTop_toBottomOf="@id/img_category"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</androidx.constraintlayout.widget.ConstraintLayout>